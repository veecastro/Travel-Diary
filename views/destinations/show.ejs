            &nbsp;

            <div>

                <form action="/destinations/<%= destination._id %>?_method=DELETE" method="POST">
                    <button type="submit" class="button">delete</button>
                </form>
            </div>

        </section>











    </body>
    <%- include('../partials/footer') %>

