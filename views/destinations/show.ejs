    <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<%- include('../partials/header') %>


    <body>
        <h1 class="destination-title">About</h1>
        <section class="details">

            <!-- <div>Name: </div> -->
            <div class="detail-place">
                <%= destination.name %>,


                    <!-- <div>Country: </div> -->

                    <%= destination.country %>
            </div>

            <!-- <div>
                Description:
            </div> -->
            <div>
                <%= destination.description %>
            </div>

